{
  "name": "frontend-cms",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "commit": "npx cz",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:ci": "start-server-and-test start http://localhost:4200 e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/cdk": "^14.2.7",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^14.2.7",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@microsoft/signalr": "^7.0.2",
    "@ngrx/effects": "^14.3.3",
    "@ngrx/store": "^14.3.3",
    "@ngrx/store-devtools": "14.3",
    "cypress": "^10.11.0",
    "ng-click-outside": "^9.0.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.7",
    "@angular/cli": "~14.2.7",
    "@angular/compiler-cli": "^14.2.0",
    "@badeball/cypress-cucumber-preprocessor": "^13.1.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@cypress/schematic": "^2.5.0",
    "@frsource/cypress-plugin-visual-regression-diff": "^3.3.10",
    "@types/jasmine": "~4.0.0",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.2.5",
    "cypress-signalr-mock": "^1.4.2",
    "husky": "^8.0.1",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "postcss": "^8.4.18",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.2.1",
    "typescript": "~4.7.2",
    "validate-branch-name": "^1.3.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "validate-branch-name": {
    "pattern": "^(master|main|dev){1}$|^(feature|fix|hotfix|release|chore)/.+$",
    "errorMsg": "Branch name format : <type>/<name>"
  }
}