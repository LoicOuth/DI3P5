@page
@model ErrorModel
@{
    ViewData["Title"] = Ressources.Error_Title;
}

<div class="flex flex-column align-center w-full">
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <h2 class="text-danger">@Ressources.Error_Message</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>@Ressources.Error_RequestId</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>