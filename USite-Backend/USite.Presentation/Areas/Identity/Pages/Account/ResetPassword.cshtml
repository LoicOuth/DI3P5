@page
@model ResetPasswordModel
@{
    ViewData["Title"] = Ressources.ResetPassword_Title;
}
<div class="flex flex-column align-center w-full">
    <h1>@ViewData["Title"]</h1>
    <h2>@Ressources.ResetPassword_Title2</h2>

    <form method="post" class="w-1_5">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />

        <div class="form mb-3">
            <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                   placeholder=" " />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div class="form mb-3">
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true"
                   placeholder=" " />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div class="form mb-3">
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password"
                   aria-required="true" placeholder=" "/>
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword"></span>
        </div>
        <button type="submit" class="w-full btn-primary">@Ressources.ResetPassword_Reset</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
