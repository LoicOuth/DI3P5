@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = Ressources.LoginWithRecoveryCode_Title;
}
<div class="flex flex-column align-center ">
    <h1>@ViewData["Title"]</h1>
    <div class="w-1_6">
        <form method="post">
            <p>
                @Ressources.LoginWithRecoveryCode_Message
            </p>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form mb-3">
                <input asp-for="Input.RecoveryCode" autocomplete="off" placeholder=" " />
                <label asp-for="Input.RecoveryCode"></label>
                <span asp-validation-for="Input.RecoveryCode"></span>
            </div>
            <button type="submit" class="w-full btn-primary">@Ressources.Text_Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}